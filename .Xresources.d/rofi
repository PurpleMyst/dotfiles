! vim: filetype=xdefaults

! Set border width
rofi.bw: 2

! Set window width
rofi.width: -80

! Set scroll-method to continuous
rofi.scroll-method: 1

! Choose the same font as everything else
rofi.font: MAINFONT FONTSIZE

! Let i3 choose the terminal to use
rofi.terminal: i3-sensible-terminal

! Utilize normal interactive shell environment when utilizing Shift+Enter
rofi.run-shell-command: {terminal} -e zsh -ic {cmd}

! Enable the extended coloring options
rofi.color-enabled: true

! Property Name     BG      Border  Separator
rofi.color-window:  base01, base01, base02

! Property Name     BG      FG      BG-alt  Head-BG Head-FG
rofi.color-normal:  base01, base05, base01, base01, base07
rofi.color-active:  base01, base0D, base01, base01, base0D
rofi.color-urgent:  base01, base08, base01, base01, base08

! Set the desired separator style
rofi.separator-style: solid
